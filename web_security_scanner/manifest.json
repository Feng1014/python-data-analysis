{
  "manifest_version": 3,
  "name": "Web Security Scanner",
  "version": "1.0",
  "description": "Penetration testing tool to scan web security headers and vulnerabilities.",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png" 
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}